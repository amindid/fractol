SRCS	=	fractol.c \
			ft_atod.c \
			utils.c

BSRCS	=	fractol_bonus.c \
			ft_atod.c \
			utils.c \
			burning_ship.c \
			change_julia.c

OBJS	= ${SRCS:.c=.o}

BOBJS	= ${BSRCS:.c=.o}

NAME	= fractol

BNAME	= fractol_bonus

GREEN	=	\e[38;5;118m
YELLOW  =   \e[38;5;226m
RED		=	\033[0;31m


CC		= cc

CFLAGS  = -Wall -Wextra -Werror

RM		= rm -f

all : ${NAME}

%.o : %.c
	${CC} ${CFLAGS} -I/usr/include -Imlx_linux -O3 -c $< -o $@


${NAME} : $(OBJS) main.c fractol.h
